{
  "name": "compact-relative-time-notation",
  "version": "1.1.0",
  "private": false,
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danilupion/compact-relative-time-notation"
  },
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.ts' --fix",
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "prettify": "prettier --write  \"./src/**/*.{ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-vitest": "^0.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "src/**/*.{js,cjs}": [
      "yarn prettify"
    ],
    "src/**/*.{ts,json}": [
      "yarn prettify",
      "yarn lint:fix --max-warnings=0",
      "vitest related --run"
    ]
  }
}
